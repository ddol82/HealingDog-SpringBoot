<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.healing.healingdog.beauty.model.dao.BeautyManageMapper">


    <!--  beauty-manage  -->

    <select id="selectBeautyInfo" resultType="BeautyDTO">
        SELECT
            *
        FROM beauties
        WHERE
            provider_code=#{providerCode}
    </select>
    <insert id="registerBeautyInfo">
        INSERT INTO beauties
        VALUES (
                null,
                #{providerCode},
                #{beautyReservationListCode},
                #{timeCode},
                #{name},
                #{phone},
                #{web},
                #{address},
                #{intro},
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT,
                DEFAULT
               )
    </insert>
    <update id="updateBeautyInfo">
        UPDATE beauties
        SET
            #{beautyReservationListCode},
            #{timeCode},
            #{name},
            #{phone},
            #{web},
            #{address},
            #{intro},
        WHERE provider_code = #{providerCode}
    </update>




</mapper>
